enum DayType {
    MONDAY
    TUESDAY
    WEDNESDAY
    THURSDAY
    FRIDAY
    SATURDAY
    SUNDAY
}

model Blook {
    id                 Int                 @id @default(autoincrement())
    name               String              @unique
    description        String?
    chance             Float               @default(0)
    price              Int                 @default(0)
    rarityId           Int
    imageId            Int
    backgroundId       Int
    video              BlookVideo?
    packId             Int?
    onlyOnDay          DayType?
    isBig              Boolean             @default(false)
    shinyHue           Int?
    priority           Int                 @default(0)
    createdAt          DateTime            @default(now())
    updatedAt          DateTime            @updatedAt
    background         Resource            @relation("blookBackground", fields: [backgroundId], references: [id], onDelete: NoAction)
    image              Resource            @relation("blook", fields: [imageId], references: [id], onDelete: NoAction)
    pack               Pack?               @relation(fields: [packId], references: [id])
    rarity             Rarity              @relation(fields: [rarityId], references: [id], onDelete: NoAction)
    itemShops          ItemShop[]
    products           Product[]
    userBlooks         UserBlook[]
    spinnyWheelRewards SpinnyWheelReward[]
}

model BlookVideo {
    id         Int      @id @default(autoincrement())
    blookId    Int      @unique
    resourceId Int
    length     Int
    blook      Blook    @relation(fields: [blookId], references: [id], onDelete: Cascade)
    resource   Resource @relation("blookVideo", fields: [resourceId], references: [id], onDelete: NoAction)
}
