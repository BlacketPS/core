generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["prismaSchemaFolder"]
}

generator typescriptInterfaces {
    provider = "prisma-generator-typescript-interfaces"
    output   = "../../types/src/interfaces.ts"
    enumType = "both"
}

datasource db {
    provider = "postgresql"
    url      = env("SERVER_DATABASE_URL")
}

enum PermissionType {
    // DEFAULT PERMISSIONS
    CREATE_REPORTS
    CHANGE_USERNAME

    // PLUS PERMISSIONS
    // TIER 1
    CHANGE_NAME_COLOR_TIER_1
    EARLY_ACCESS_TIER_1
    USE_CHAT_COLORS
    UPLOAD_FILES_SMALL
    MORE_AUCTIONS_TIER_1
    CREATE_GUILDS

    // TIER 2
    CHANGE_NAME_COLOR_TIER_2
    EARLY_ACCESS_TIER_2
    UPLOAD_FILES_MEDIUM
    MORE_AUCTIONS_TIER_2
    LESS_AUCTION_TAX
    MORE_CHAT_BADGE_TIER_1
    CUSTOM_TRADING_TABLE_COLOR

    // TIER 3
    MORE_AUCTIONS_TIER_3
    MORE_CHAT_BADGE_TIER_2
    UPLOAD_FILES_LARGE

    // TIER 4
    MORE_AUCTIONS_TIER_4
    CUSTOM_AVATAR
    CUSTOM_BANNER

    // TRIAL MODERATOR PERMISSIONS
    MUTE_USERS
    BAN_USERS
    MANAGE_MESSAGES
    VIEW_AUDIT

    // MODERATOR PERMISSIONS
    MANAGE_REPORTS
    REVERT_AUDIT

    // ADMIN PERMISSIONS
    BLACKLIST_USERS
    MANAGE_USER_BLOOKS
    MANAGE_USER_ITEMS
    MANAGE_USER_TITLES
    MANAGE_USER_BANNERS
    MANAGE_USER_FONTS
    MANAGE_NEWS_POSTS

    // CO-OWNER PERMISSIONS
    MANAGE_USER_GROUPS
    MANAGE_CHAT_ROOMS
    MANAGE_DATA
    DELETE_USERS

    // OWNER PERMISSIONS
    MANAGE_GROUPS
}
